<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!-- <bean/> definitions here -->

    <bean class="com.nabajyoti.springcoretut.Student" name="student1" init-method="init" >
        <property name="studentId">
            <value>11500119044</value>
        </property>
        <property name="studentName">
            <value>Nabajyoti</value>
        </property>
        <property name="studentAddress">
            <value>Tripura</value>
        </property>
    </bean>

    <bean class="com.nabajyoti.springcoretut.Teacher" name="teacher1" destroy-method="destroy">
        <property name="teacherId">
            <value>456</value>
        </property>
        <property name="teacherName">
            <value>Papai</value>
        </property>
        <property name="teacherAddress">
            <value>Meghalay</value>
        </property>
    </bean>
    
</beans>